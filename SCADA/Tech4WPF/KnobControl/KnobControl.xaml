<UserControl x:Class="Tech4WPF.KnobControl.KnobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:Tech4WPF.Common"
             xmlns:local="clr-namespace:Tech4WPF.KnobControl"
             mc:Ignorable="d" Height="180" Width="190">
    <Viewbox>
		<Grid Height="180" Width="190">
			<local:KnobPart x:Name="knob" Margin="58,51" />
			<common:RoundScalePart x:Name="scale" Margin="10,0,9,0" />
			<TextBlock x:Name="label" Margin="15,152,15,8" TextWrapping="Wrap" 
                       TextAlignment="Center" FontSize="15"><Run Language="cs-cz" Text="Label"/></TextBlock>
		</Grid>
	</Viewbox>
</UserControl>
